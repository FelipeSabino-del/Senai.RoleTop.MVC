@model MVC.ViewModels.DashboardViewModel
<main>
<br>
        <div id="user">
            <p>
                <img src="~/img/usuario.png" alt="" style="width: 200px; height: 200px">
            </p>
            <p id="p2">
                ADM
            </p>
        </div>
<br>
<br>
<br>
        <div class="tab">
            <button class="tablinks" onclick="openCity(event, 'London')" id="defaultOpen">Eventos pendentes de usuários</button>
            <button class="tablinks" onclick="openCity(event, 'Tokyo')">Eventos já aprovados</button>
        </div>
        
        <div id="London" class="tabcontent">
            <h2>Dashboard</h2>

            <section id="status-pedidos">
                <h3>Status dos pedidos</h3>
                <div id="painel">
                    <div class="box-status-pedidos aprovados">
                        <h4>Aprovados</h4>
                        <p>@Model.EventosAprovados</p>
                    </div>
                    <div class="box-status-pedidos pendentes">
                        <h4>Pendentes</h4>
                        <p>@Model.EventosPendentes</p>
                    </div>
                    <div class="box-status-pedidos reprovados">
                        <h4>Reprovados</h4>
                        <p>@Model.EventosReprovados</p>
                    </div>
                </div>
            </section>
    
            <section id="lista-pedidos">
                <h3>Lista de eventos</h3>
                <table>
                <thead>
                    <tr>
                        <th rowspan="2">Nome do evento</th>
                        <th rowspan="2">Data</th>
                        <th rowspan="2">Número de pessoas</th>
                        <th rowspan="2">Adicionais</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Eventos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var eventos in Model.Eventos )
                    {
                        <tr>
                            <td>@eventos.Espaço.Nome</td>
                            <td>@eventos.DataDoEvento.ToShortDateString()</td>
                            <td>@eventos.NumPessoa.Nome</td>
                            <td>@eventos.Adicional.Nome</td>
                            <td><a href='@Url.Action("Aprovar", "User", new {id = @eventos.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "User", new {id = @eventos.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
            </section>
        </div>
        
        
        
       <section class="lista-pedidos">
        <div id="Tokyo" class="tabcontent">
        <h3>Eventos aprovados</h3>
<br>
<br>
        <table>
                <thead>
                    <tr>
                        <th rowspan="2">Nome do evento</th>
                        <th rowspan="2">Data</th>
                        <th rowspan="2">Número de pessoas</th>
                        <th rowspan="2">Adicionais</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <p>Eventos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var eventos in Model.Eventos)
                    {
                        if (eventos.Status == 1)
                        {                            
                            <tr>
                                <td>@eventos.Espaço.Nome</td>
                                <td>@eventos.DataDoEvento.ToShortDateString()</td>
                                <td>@eventos.NumPessoa.Nome</td>
                                <td>@eventos.Adicional.Nome</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
<br>
<br>
<br>
<hr>
</main>

